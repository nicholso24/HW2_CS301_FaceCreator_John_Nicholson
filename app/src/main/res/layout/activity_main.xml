<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="673dp"
        android:orientation="horizontal">

        <com.example.hw2_cs301_facecreator.Face
            android:id="@+id/surfaceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="254dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/redBarText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red" />

            <SeekBar
                android:id="@+id/redSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />

            <TextView
                android:id="@+id/blueBarText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue" />

            <SeekBar
                android:id="@+id/blueSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />

            <TextView
                android:id="@+id/greenBarText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Green" />

            <SeekBar
                android:id="@+id/greenSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectSpinnerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Hair" />

            <Spinner
                android:id="@+id/hairStyleSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/randomizeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Randomize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="473dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/hairRadioText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hair" />

                <RadioButton
                    android:id="@+id/hairRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/eyeRadioText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eye" />

                <RadioButton
                    android:id="@+id/eyeRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/skinRadioText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skin" />

                <RadioButton
                    android:id="@+id/skinRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>